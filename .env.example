# BrowserStack Configuration
# Replace these with your actual credentials
BROWSERSTACK_USERNAME=your_username_here
BROWSERSTACK_ACCESSKEY=your_access_key_here

# Application Configuration
APP_URL=https://elpais.com
APP_LANGUAGE=es

# Timeouts (in seconds)
TIMEOUT_IMPLICIT=10
TIMEOUT_EXPLICIT=15
TIMEOUT_PAGELOAD=20

# File Paths
DOWNLOAD_PATH=./downloads/images
RESULTS_PATH=./results/articles
LOGS_PATH=./logs

# Parallel Execution
PARALLEL_THREADS=5
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=browserstack_test.log

# Feature Flags
FEATURE_DOWNLOAD_IMAGES=true
FEATURE_TRANSLATE_ARTICLES=true
FEATURE_ANALYZE_WORDS=true
FEATURE_TAKE_SCREENSHOTS=true

# Optional: Google Translate API Key (if using official translation service)
# GOOGLE_TRANSLATE_API_KEY=your_api_key_here

