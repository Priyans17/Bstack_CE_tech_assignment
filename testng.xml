<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="El Pais Suite" parallel="false">

    <!-- ================= LOCAL EXECUTION (FULL) ================= -->
    <test name="Local_Chrome">
        <parameter name="env" value="local"/>
        <parameter name="browserName" value="chrome"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="os" value="Windows"/>
        <parameter name="osVersion" value="11"/>
        <parameter name="resolution" value="1920x1080"/>
        <parameter name="device" value=""/>

        <classes>
            <class name="com.elpais.automation.tests.ArticleScrapingTest"/>
            <class name="com.elpais.automation.tests.TranslationAnalysisTest"/>
        </classes>
    </test>

    <!-- ================= BROWSERSTACK (ONE SESSION ONLY) ================= -->
    <test name="BrowserStack_Chrome_Windows">
        <parameter name="env" value="browserstack"/>
        <parameter name="browserName" value="chrome"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="os" value="Windows"/>
        <parameter name="osVersion" value="11"/>
        <parameter name="resolution" value="1920x1080"/>
        <parameter name="device" value=""/>

        <classes>
            <class name="com.elpais.automation.tests.TranslationAnalysisTest"/>
        </classes>
    </test>

    <!-- ================= OTHER BROWSERS (DEFINED BUT DISABLED) ================= -->

    <test name="BrowserStack_Firefox_Windows" enabled="false">
        <parameter name="env" value="browserstack"/>
        <parameter name="browserName" value="firefox"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="os" value="Windows"/>
        <parameter name="osVersion" value="11"/>
        <parameter name="resolution" value="1920x1080"/>
        <parameter name="device" value=""/>
        <classes>
            <class name="com.elpais.automation.tests.TranslationAnalysisTest"/>
        </classes>
    </test>

    <test name="BrowserStack_Safari_Mac" enabled="false">
        <parameter name="env" value="browserstack"/>
        <parameter name="browserName" value="safari"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="os" value="OS X"/>
        <parameter name="osVersion" value="Monterey"/>
        <parameter name="resolution" value="1920x1080"/>
        <parameter name="device" value=""/>
        <classes>
            <class name="com.elpais.automation.tests.TranslationAnalysisTest"/>
        </classes>
    </test>

    <test name="BrowserStack_Android" enabled="false">
        <parameter name="env" value="browserstack"/>
        <parameter name="browserName" value="chrome"/>
        <parameter name="device" value="Samsung Galaxy S21"/>
        <parameter name="osVersion" value="12.0"/>
        <classes>
            <class name="com.elpais.automation.tests.TranslationAnalysisTest"/>
        </classes>
    </test>

    <test name="BrowserStack_iPhone" enabled="false">
        <parameter name="env" value="browserstack"/>
        <parameter name="browserName" value="safari"/>
        <parameter name="device" value="iPhone 14"/>
        <parameter name="osVersion" value="16"/>
        <classes>
            <class name="com.elpais.automation.tests.TranslationAnalysisTest"/>
        </classes>
    </test>

</suite>
